<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.3.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_3_0.dtd">

<service-builder dependency-injector="ds" package-path="com.everis.rec.maintenanceactivity">
	<namespace>AMA</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity local-service="true" name="MaintenanceActivity" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="maintenanceactivityId" primary="true" type="long" />



		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="activityTitle" type="String" />
		<column name="dueDate" type="String" />
		<column name="status" type="String" />
		<column name="orgSiteId" type="long" />
		<column name="specificParty" type="String" /> 
		<column name="dueDateFormated" type="Date" />
		<column name="calendarBookingId" type="long" />
		

		<!-- Order -->

		<order by="asc">
			<order-column name="specificParty" />
		</order>

		<!-- Finder methods -->
		
		<finder name="Status" return-type="Collection">
			<finder-column name="status" />
		</finder>	
		

	
	</entity>
</service-builder>