<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.3.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_3_0.dtd">

<service-builder dependency-injector="ds"
	package-path="com.everis.rec.remediation.tracker">
	<namespace>REC</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" 
		remote-service="false" session-factory="sampleSessionFactory" table="foo" 
		tx-manager="sampleTransactionManager uuid="true""> -->
	<entity local-service="true" name="RemediationTracker"
		remote-service="false" uuid="true">

		<!-- PK fields -->

		<column name="remediationTrackerId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="title" type="String" />
		<column name="orgSiteId" type="long"></column>
		<column name="specificParty" type="String"></column>
		<column name="category" type="String" />
		<column name="description" type="String" />
		<column name="dueDate" type="String"></column>
		<column name="dueDateFormated" type="Date" />
		<column name="status" type="String" />
		<column name="calendarBookingId" type="long" />


		<!-- Order -->

		<order by="asc">
			<order-column name="title" />
		</order>

		<!-- Finder methods -->
		<finder name="Status" return-type="Collection">
			<finder-column name="status" />
		</finder>

		<!-- References -->
	</entity>
</service-builder>